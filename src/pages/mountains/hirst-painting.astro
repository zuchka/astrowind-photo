---
import Layout from '~/layouts/PageLayout.astro';
import ArtworkImage from '~/components/widgets/ArtworkImage.astro';
import ArtworkDetails from '~/components/widgets/ArtworkDetails.astro';
import ArtistBio from '~/components/widgets/ArtistBio.astro';
import ArtworkLocation from '~/components/widgets/ArtworkLocation.astro';

const metadata = {
  title: 'Hirst Cherry Blossoms',
};
---

<Layout metadata={metadata}>
  <ArtworkImage
    class="rounded-lg"
    src="lanai/mountains/hirst-blossoms-main"
    alt="Hirst Cherry Blossoms"
    width="896"
    height="896"
  />
  <ArtworkDetails
    artworkDetails={{
      title: 'EARLY BLOSSOM & EVENING BLOSSOM',
      artist: 'DAVID HIRST',
      date: '2018',
      description: `
        TK. TWO PAINTINGS.
      `,
      material: 'oil on canvas',
      copyright: '© David Hirst',
      photoCredit: 'Photo credit: © Phillip Sowers',
      callToAction: {
        target: '_self',
        text: 'Learn More',
        href: '#artist-bio',
      },
    }}
  />
  <ArtworkImage
    class="rounded-lg"
    src="lanai/mountains/hirst-blossoms-detail"
    alt="David Hirst Cherry Blossoms Detail"
    width="896"
    height="896"
  />
  <ArtistBio
    artist="DAVID HIRST"
    lifespan="1965 - "
    nationality="British"
    description=`
      TK
    `
    callToAction={{
      target: '_self',
      text: 'View on Map',
      href: '#location',
    }}
  />
  <ArtworkLocation
    hotelLocation="MOUNTAINS: Grand Lobby, Sensei Lāna'i"
    gpsCoordinates=`20°50'08.1"N 156°55'02.0"W`
    terrain="Kaiholena Gulch, Lāna'i, Hawai'i"
    description=`
      Early Blossom & Evening Blossom hang in the Grand Lobby of Sensei Lāna'i.
    `
    callToAction={{
      target: '_blank',
      text: 'Open in Google Maps',
      href: 'https://maps.app.goo.gl/KQVDTFyFu6qagqvE9',
    }}
  />
</Layout>
