---
import Layout from '~/layouts/PageLayout.astro';
import ArtworkImage from '~/components/widgets/ArtworkImage.astro';
import ArtworkDetails from '~/components/widgets/ArtworkDetails.astro';
import ArtistBio from '~/components/widgets/ArtistBio.astro';
import ArtworkLocation from '~/components/widgets/ArtworkLocation.astro';
import { FERNANDO_BOTERO } from '~/data/artistBios';
import ScrollToTop from '~/components/widgets/ScrollToTop.astro';

const metadata = {
  title: 'Botero Dancers',
};
---

<Layout metadata={metadata}>
  <ScrollToTop />
  <ArtworkImage
    width="896"
    height="896"
    src="botero-dancers-main"
    alt="Dancers sculpture by Fernando Botero"
    caption="Image: Phillip Sowers"
  />
  <ArtworkDetails
    artworkDetails={{
      title: 'DANCERS',
      artist: FERNANDO_BOTERO.artist,
      date: '2012',
      description: `
        They stand perfectly erect, Botero’s Dancers.
        They are rigid, yes, but not stiff. We have caught
        them during a quiet moment in some, exacting
        pas de deux. These are, instead, two bodies in
        perfect control, with perfect balance.
      `,
      material: 'bronze',
      copyright: FERNANDO_BOTERO.copyright,
      photoCredit: 'Photo credit: Phillip Sowers',
      callToAction: {
        target: '_self',
        text: 'Learn More',
        href: '#artist-bio',
      },
    }}
  />
  <ArtistBio
    artist={FERNANDO_BOTERO.artist}
    lifespan={FERNANDO_BOTERO.lifespan}
    nationality={FERNANDO_BOTERO.nationality}
    description={FERNANDO_BOTERO.description}
  />
  <ArtworkLocation
    hotelLocation="MOUNTAINS: Front Garden, Sensei Lāna'i"
    gpsCoordinates=`20°50'06.1"N 156°55'02.3"W`
    terrain="Kaiholena Gulch, Lāna'i, Hawai'i"
    description=`
      Dancers are nestled in the front garden of Sensei Lāna'i.
      Leaving the lobby, walk left down the driveway. 
      The dancers are in a grove to your left, near the great Norfolk Pine.
    `
    callToAction={{
      target: '_blank',
      text: 'Open in Google Maps',
      href: 'https://maps.app.goo.gl/FVon14T9pW3q84zJA',
    }}
  />
</Layout>
