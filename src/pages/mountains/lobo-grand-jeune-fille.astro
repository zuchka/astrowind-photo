---
import Layout from '~/layouts/PageLayout.astro';
import ArtworkImage from '~/components/widgets/ArtworkImage.astro';
import ArtworkDetails from '~/components/widgets/ArtworkDetails.astro';
import ArtistBio from '~/components/widgets/ArtistBio.astro';
import ArtworkLocation from '~/components/widgets/ArtworkLocation.astro';
import { BALTASAR_LOBO } from '~/data/artistBios';
import ScrollToTop from '~/components/widgets/ScrollToTop.astro';

const metadata = {
  title: 'Lobo Grande Jeune Fille à Genoux',
};
---

<Layout metadata={metadata}>
  <ScrollToTop />
  <ArtworkImage
    class="rounded-lg"
    src="lobo-fille-a-genoux-main"
    alt="Lobo Grande Jeune Fille à Genoux"
    width="896"
    height="896"
    caption="Image: Phillip Sowers"
  />
  <ArtworkDetails
    artworkDetails={{
      title: 'GRANDE JEUNE FILLE À GENOIX',
      artist: BALTASAR_LOBO.artist,
      date: '1993',
      description: `
        The last of Lobo’s works appears like a tall,
        slender totem before the last Hale. Kneeling (à
        genoux), this young woman has swept her arms
        behind her head, resting her elbows on her head.
        Notice the sharp ridge of her hair that traces the
        spine, and the softly curving legs below.
      `,
      material: 'bronze',
      copyright: BALTASAR_LOBO.copyright,
      photoCredit: 'Photo credit: Phillip Sowers',
      callToAction: {
        target: '_self',
        text: 'Learn More',
        href: '#artist-bio',
      },
    }}
  />
  <ArtworkImage
    class="rounded-lg"
    src="lobo-fille-a-genoux-detail"
    alt="Baltasar Lobo Grand Jeune Fille à Genoux Detail"
    width="896"
    height="896"
    caption="Image: Phillip Sowers"
  />
  <ArtistBio
    artist={BALTASAR_LOBO.artist}
    lifespan={BALTASAR_LOBO.lifespan}
    nationality={BALTASAR_LOBO.nationality}
    description={BALTASAR_LOBO.description}
  />
  <ArtworkLocation
    hotelLocation="MOUNTAINS: Rear Garden, Sensei Lāna'i"
    gpsCoordinates=`20°50'13.8"N 156°54'59.7"W`
    terrain="Kaiholena Gulch, Lāna'i, Hawai'i"
    description=`
      Grande Jeune Fille à Genoux is nestled in the rear garden of Sensei Lāna'i.
      It stands in front of the spa hales along with four other sculptures by Lobo.
    `
    callToAction={{
      target: '_blank',
      text: 'Open in Google Maps',
      href: 'https://maps.app.goo.gl/AFmccTLk17UhED8M8',
    }}
  />
</Layout>
