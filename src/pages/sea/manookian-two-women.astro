---
import Layout from '~/layouts/PageLayout.astro';
import ArtworkImage from '~/components/widgets/ArtworkImage.astro';
import ArtworkDetails from '~/components/widgets/ArtworkDetails.astro';
import ArtistBio from '~/components/widgets/ArtistBio.astro';
import ArtworkLocation from '~/components/widgets/ArtworkLocation.astro';

const metadata = {
  title: 'Manookian Two Women',
};
---

<Layout metadata={metadata}>
  <ArtworkImage
    class="rounded-lg"
    src="lanai/sea/fwzi8ino5qwyi2pgkm87"
    alt="Manookian Two Women"
    width="896"
    height="896"
  />
  <ArtworkDetails
    artworkDetails={{
      title: 'TWO WOMEN',
      artist: 'ARMAN MANOOKIAN',
      date: '1930',
      description: `
        TK
      `,
      material: 'Oil on canvas laid to board',
      copyright: '© Manookian',
      photoCredit: 'Photo credit: © Phillip Sowers',
      callToAction: {
        target: '_self',
        text: 'Learn More',
        href: '#artist-bio',
      },
    }}
  />
  <ArtistBio
    artist="ARMAN MANOOKIAN"
    lifespan="1904 - 1931"
    nationality="Turkish"
    description=`
      TK
    `
    callToAction={{
      target: '_self',
      text: 'View on Map',
      href: '#location',
    }}
  />
  <ArtworkLocation
    hotelLocation="SEA: Main Lobby, Four Seasons Resort Lāna'i"
    gpsCoordinates=`20°44'30.0"N 156°53'47.6"W`
    terrain="Hulopo'e Bay"
    description=`
      Manookian's painting Two Women is in the main lobby of the Four Seasons Resort Lāna'i at Manele Bay.
    `
    callToAction={{
      target: '_blank',
      text: 'Open in Google Maps',
      href: 'https://maps.app.goo.gl/mQiSTdfoMQMCzB7v5',
    }}
  />
</Layout>
