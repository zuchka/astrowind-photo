---
import Layout from '~/layouts/PageLayout.astro';
import ArtworkImage from '~/components/widgets/ArtworkImage.astro';
import ArtworkDetails from '~/components/widgets/ArtworkDetails.astro';
import ArtistBio from '~/components/widgets/ArtistBio.astro';
import ArtworkLocation from '~/components/widgets/ArtworkLocation.astro';
import { URS_FISCHER } from '~/data/artistBios';
import ScrollToTop from '~/components/widgets/ScrollToTop.astro';

const metadata = {
  title: 'Fischer The Breach',
};
---

<Layout metadata={metadata}>
  <ScrollToTop />
  <ArtworkImage
    width="896"
    height="896"
    src="lanai/mountains/fischer-main"
    alt="Fischer The Breach sculpture by Urs Fischer"
    caption="Image: Phillip Sowers"
  />
  <ArtworkDetails
    artworkDetails={{
      title: 'THE BREACH',
      artist: URS_FISCHER.artist,
      date: '2018-2021',
      description: `
        This monolithic sculpture is a site-specific commission by the Swiss artist Urs Fischer. While it may resemble a breaching whale, the form of the original clay model was inspired by the rectangular shapes of Lāna'i’s pineapple fields. Fischer uses materials, like clay, wax, metals, and even bread to challenge our perception and understanding of the world. Within the texture of the cast aluminum, the artist’s fingerprint is scaled to massive proportions. It glimmers in the sun like the vast ocean behind it.
      `,
      material: 'Cast aluminum and stainless steel',
      copyright: URS_FISCHER.copyright,
      photoCredit: 'Photo credit: © Phillip Sowers',
      callToAction: {
        target: '_self',
        text: 'Learn More',
        href: '#artist-bio',
      },
    }}
  />
  <ArtworkImage
    width="896"
    height="896"
    src="lanai/sea/breach-detail-1"
    alt="Detail of Fischer The Breach sculpture"
    caption="Image: Phillip Sowers"
  />
  <ArtworkImage
  width="896"
  height="896"
  src="lanai/sea/breach-sunset"
  alt="Detail of Fischer The Breach sculpture"
  caption="Image: Phillip Sowers"
/>
<ArtworkImage
width="896"
height="896"
src="lanai/sea/breach-with-stars"
alt="Detail of Fischer The Breach sculpture"
caption="Image: Phillip Sowers"
/>
  <ArtistBio
    artist={URS_FISCHER.artist}
    lifespan={URS_FISCHER.lifespan}
    nationality={URS_FISCHER.nationality}
    description={URS_FISCHER.description}
  />
  <ArtworkImage
width="896"
height="896"
src="lanai/sea/breach-golf-course"
alt="Detail of Fischer The Breach sculpture"
caption="Image: Phillip Sowers"
/>
<ArtworkImage
width="896"
height="896"
src="lanai/sea/breach-detail-2"
alt="Detail of Fischer The Breach sculpture"
caption="Image: Phillip Sowers"
/>
  <ArtworkLocation
    hotelLocation="SEA: Hulopo'e Drive, west of Four Seasons Resort Lāna'i"
    gpsCoordinates=`20°44'26.7"N 156°54'38.6"W`
    terrain="Kaluakoi Point"
    description=`
      The sculpture is located on the road that runs west of the Four Seasons Resort Lāna'i at Manele Bay.
      <br><br>
      Ask the concierge for directions to the sculpture.
    `
    callToAction={{
      target: '_blank',
      text: 'Open in Google Maps',
      href: 'https://maps.app.goo.gl/wHAHwFvQFsNA1fa38',
    }}
  />
</Layout>
